<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <title>THUEXEDAPHOIAN - Đăng ký tài khoản</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/Index.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="header-container">
                <div class="header-content">
                    <!-- Logo -->
                    <div class="logo">
                        <a href="/home/index">
                            <img src="~/images/logo2.png" class="logo-img"/>
                            <span>THUEXEDAPHOIAN</span>
                        </a>
                    </div>

                    <!-- Search -->
                    <div class="search-bar">
                        <i class="fa-solid fa-search search-icon"></i>
                        <input type="text" placeholder="Search...">
                    </div>

                    <!-- Navigation -->
                    <nav class="navigation">
                        <a href="/home/index" class="nav-link">Trang chủ</a>
                        <a href="#" class="nav-link">Các chỗ cho thuê</a>
                        <a href="#" class="nav-link">Xe đạp</a>
                        <a href="/account/dangKy" class="btn btn-login">Đăng ký</a>
                        <a href="/account/dangnhap" class="btn btn-login">Đăng nhập</a>
                    </nav>
                </div>
            </div>
        </header>

        @RenderBody()
        
        <!-- Footer -->
        <footer class="footer">
            <div class="footer-container">
                <div class="footer-content">
                    <!-- Company Info -->
                    <div class="footer-section">
                        <h3 class="footer-title">THUEXEDAPHOIAN</h3>
                        <p class="footer-description">Website giới thiệu cho thuê xe đạp tại Hội An</p>
                        <h3 class="footer-title">Liên hệ</h3>
                        <div class="contact-info">
                            <p><i class="fas fa-phone"></i> (+84)3951649980</p>
                            <p><i class="fas fa-envelope"></i> hoanghaibao@gmail.com</p>
                        </div>
                        
                    </div>

                    <!-- Contact Info -->
                    <div class="footer-section">
                        <h3 class="footer-title">Mạng xã hội</h3>
                        <div class="social-links">
                            <a href="#" class="social-link facebook"><i class="fab fa-facebook"></i></a>
                            <a href="#" class="social-link twitter"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="social-link instagram"><i class="fab fa-instagram"></i></a>
                        </div>
                        <h3 class="footer-title">Địa chỉ văn phòng</h3>
                        <p><i class="fas fa-map-marker-alt"></i> 48 Cao Thắng, Thanh Bình, Hải Châu, Đà Nẵng, Việt Nam</p>
                    </div>

                    <!-- Stats -->
                    <div class="footer-section">
                        <div class="stats-container">
                            <div class="stat-box">
                                <div class="stat-value">148</div>
                                <div class="stat-label">Online</div>
                            </div>
                            <div class="stat-box">
                                <div class="stat-value">1824</div>
                                <div class="stat-label">Tổng lượt xem</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Mobile menu toggle
      const menuToggle = document.querySelector('.mobile-menu-toggle');
      const mobileMenu = document.querySelector('.mobile-menu');
      
      menuToggle.addEventListener('click', function() {
        mobileMenu.classList.toggle('show');
      });
    });
  </script>
  
  <!-- Tab functionality -->
  <script src="~/js/Index.js"></script>
  
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>