<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <title>THUEXEDAPHOIAN</title>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="header-container">
                <div class="header-content">
                    <!-- Logo -->
                    <div class="logo">
                        <a asp-area="Client" asp-controller="Home" asp-action="Index">
                            <img src="~/images/logo2.png" class="logo-img"/>
                            <span>THUEXEDAPHOIAN</span>
                        </a>
                    </div>

                    <!-- Search -->
                    <div class="search-bar">
                        <i class="fa-solid fa-search search-icon"></i>
                        <input type="text" placeholder="Search...">
                    </div>
                     
                    <!-- Navigation -->
                    <nav class="navigation">
                        <a asp-area="Client" asp-controller="Home" asp-action="Index" class="nav-link">Trang chủ</a>
                        <a href="#" class="nav-link">Các chỗ cho thuê</a>
                        <a href="#" class="nav-link">Xe đạp</a>
                    </nav>
                    <div class="header-icons">
                        <a href="/cart" class="icon-link">
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                        
                        <div class="notification-wrapper">
                            <a class="icon-link notification-bell" href="javascript:void(0)">
                                <i class="fas fa-bell"></i>
                            </a>
                            <div class="notification-box">
                                <!-- Title -->
                                <div class="notification-header">
                                    <h3>Thông báo</h3>
                                </div>
                                <!-- Notifications will go here -->
                            </div>
                        </div>


                        <!-- User Profile Dropdown -->
                        <div class="user-profile">
                            <img src="~/images/avatar-default.jpg" alt="User Avatar" class="user-avatar">
                            <span class="user-name">Ho Ten</span>
                            <i class="fas fa-chevron-down dropdown-arrow"></i>

                            <div class="dropdown-menu">
                                <a asp-area="Client" asp-controller="Home" asp-action="ThongTinTaiKhoan" class="dropdown-item">Tài khoản</a>
                                <a asp-area="Client" asp-controller="DonThue" asp-action="DonThue" class="dropdown-item">Đơn thuê</a>
                                <a asp-area="Client" asp-controller="TinhNang" asp-action="NhanTinClient" class="dropdown-item">Nhắn tin</a>
                                <a asp-area="Client" asp-controller="Home" asp-action="CuaHangRedirect" class="dropdown-item">Cửa hàng</a>
                                <a href="/dangxuat" class="dropdown-item">Đăng xuất</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </header>

        @RenderBody()
        
        <!-- Footer -->
        <footer class="footer">
            <div class="footer-container">
                <div class="footer-content">
                    <!-- Company Info -->
                    <div class="footer-section">
                        <h3 class="footer-title">THUEXEDAPHOIAN</h3>
                        <p class="footer-description">Website giới thiệu cho thuê xe đạp tại Hội An</p>
                        <h3 class="footer-title">Liên hệ</h3>
                        <div class="contact-info">
                            <p><i class="fas fa-phone"></i> (+84)3951649980</p>
                            <p><i class="fas fa-envelope"></i> hoanghaibao@gmail.com</p>
                        </div>
                        
                    </div>

                    <!-- Contact Info -->
                    <div class="footer-section">
                        <h3 class="footer-title">Mạng xã hội</h3>
                        <div class="social-links">
                            <span class="social-link facebook"><i class="fab fa-facebook"></i></span>
                            <span class="social-link twitter"><i class="fab fa-twitter"></i></span>
                            <span class="social-link instagram"><i class="fab fa-instagram"></i></span>
                        </div>
                        <h3 class="footer-title">Địa chỉ văn phòng</h3>
                        <p><i class="fas fa-map-marker-alt"></i> 48 Cao Thắng, Thanh Bình, Hải Châu, Đà Nẵng, Việt Nam</p>
                    </div>

                    <!-- Stats -->
                    <div class="footer-section">
                        <div class="stats-container">
                            <div class="stat-box">
                                <div class="stat-value">148</div>
                                <div class="stat-label">Online</div>
                            </div>
                            <div class="stat-box">
                                <div class="stat-value">1824</div>
                                <div class="stat-label">Tổng lượt xem</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu toggle
    const menuToggle = document.querySelector('.mobile-menu-toggle');
    const mobileMenu = document.querySelector('.mobile-menu');
    if (menuToggle && mobileMenu) {
        menuToggle.addEventListener('click', function() {
            mobileMenu.classList.toggle('show');
        });
    }

    // User Profile Dropdown Toggle
    const userProfile = document.querySelector('.user-profile');
    const dropdownMenu = document.querySelector('.dropdown-menu');
    if (userProfile && dropdownMenu) {
        userProfile.addEventListener('click', function(e) {
            e.stopPropagation(); // Prevent click bubbling
            dropdownMenu.classList.toggle('show');
        });
    }

    // Notification Box Toggle
    const bell = document.querySelector('.notification-bell');
    const notificationBox = document.querySelector('.notification-box');

    if (bell && notificationBox) {
        bell.addEventListener('click', function(e) {
            e.stopPropagation(); // Prevent the event from bubbling to the document click listener
            notificationBox.classList.toggle('show');
             // Toggle the active class on the icon to change its color
            bell.classList.toggle('active');
        });
    }


    // Close dropdowns/boxes if clicked outside
    document.addEventListener('click', function() {
        if (dropdownMenu) dropdownMenu.classList.remove('show');
        if (notificationBox) notificationBox.classList.remove('show');
        if (bell) bell.classList.remove('active');
    });
});
</script>

  
  <!-- Tab functionality -->
  <script src="~/js/Index.js"></script>
  
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>