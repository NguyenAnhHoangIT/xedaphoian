                            <td><button class="btn btn-warning">Xem</button></td>
                        </tr>
                        <tr>
                            <td scope="row">DT03</td>
                            <td>Xe cổ điển</td>
                            <td>Shop B</td>
                            <td class="status-col"><span class="status hoan-thanh">Hoàn thành</span></td>
                            <td><a <a asp-area="Client" asp-controller="DonThue" asp-action="ChiTietDonThue"><button class="btn btn-warning">Xem</button></a></td>
                        </tr>
                        <tr>
                            <td scope="row">DT04</td>
                            <td>Xe cổ điển</td>
                            <td>Shop B</td>
                            <td class="status-col"><span class="status dang-thue">Đang thuê</span></td>
                            <td><button class="btn btn-warning">Xem</button></td>
                        </tr>
                        <tr>
                            <td scope="row">DT05</td>
                            <td>Xe cổ điển</td>
