                            <td><button class="btn btn-warning">Xem</button></td>
                        </tr>
                        <tr>
                            <td scope="row">DT06</td>
                            <td>Xe cổ điển</td>
                            <td>Shop B</td>
                            <td class="status-col"><span class="status da-huy">Đã hủy</span></td>
                            <td><button class="btn btn-warning">Xem</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
