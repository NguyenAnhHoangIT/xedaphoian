@model ThueXeDapHoiAn.Areas.Client.Models.LoaiXeModel_Client
@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutCuaHang.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/LayoutClient.css" />
    <style>
        .edit-bike-form {
            width: 95%;
            max-width: 420px;
            margin: 48px auto;
            background: #fff;
            padding: 32px 28px 28px 28px;
            border-radius: 14px;
            box-shadow: 0 8px 32px rgba(60,60,60,0.10);
        }

            .edit-bike-form h2 {
                text-align: center;
                color: #0984e3;
                margin-bottom: 28px;
                font-size: 26px;
                font-family: inherit;
                font-weight: 700;
            }

            .edit-bike-form label {
                font-weight: 600;
                margin-top: 16px;
                display: block;
                color: #2d3436;
            }

            .edit-bike-form input[type="text"], .edit-bike-form input[type="number"] {
                width: 100%;
                padding: 12px 14px;
                margin-top: 6px;
                border-radius: 7px;
                border: 1px solid #dfe6e9;
                margin-bottom: 18px;
                font-size: 17px;
                background: #f8fafc;
                font-family: inherit;
            }

            .edit-bike-form input[readonly] {
                background: #f1f2f6;
                color: #636e72;
                cursor: not-allowed;
            }

            .edit-bike-form .form-actions {
                display: flex;
                justify-content: flex-end;
                gap: 16px;
                align-items: center;
                margin-top: 18px;
            }

            .edit-bike-form .submit-btn {
                padding: 12px 32px;
                background: #27ae60;
                color: #fff;
                border: none;
                border-radius: 7px;
                font-size: 17px;
                font-weight: 600;
                cursor: pointer;
                transition: background 0.2s;
            }

                .edit-bike-form .submit-btn:hover {
                    background: #219150;
                }

            .edit-bike-form .btn-secondary {
                padding: 12px 28px;
                background: #b2bec3;
                color: #222;
                border: none;
                border-radius: 7px;
                font-size: 17px;
                font-weight: 500;
                text-decoration: none;
                transition: background 0.2s;
            }

                .edit-bike-form .btn-secondary:hover {
                    background: #636e72;
                    color: #fff;
                }
    </style>
}
<div class="edit-bike-form">
    <h2>Sửa loại xe</h2>
    <form asp-action="SuaLoaiXe" asp-controller="CuaHang" asp-area="Client" method="post">
        <label>ID loại xe</label>
        <input type="text" name="IdLoaiXe" value="@Model.IdLoaiXe" readonly />

        <label>Tên loại xe <span style="color:red">*</span></label>
        <input type="text" name="TenLoaiXe" value="@Model.TenLoaiXe" required />

        <div class="form-actions">
            <button type="submit" class="submit-btn">Lưu thay đổi</button>
            <a href="@Url.Action("DanhSachLoaiXe", "CuaHang", new { area = "Client" })" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>