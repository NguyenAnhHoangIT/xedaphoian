@model ThueXeDapHoiAn.Areas.Client.Models.CuaHangModel_Client

@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutCuaHang.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/LayoutClient.css" />
    <link rel="stylesheet" href="~/css/ThongTinTaiKhoan.css" />
    <link href="~/css/ThongTinCuaHang.css" rel="stylesheet" />
}
<style>
    .form-container {
        width: 100%;
        max-width: 1000px;
        margin: 40px auto;
        background-color: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
</style>
<header>
    <nav class="main-nav">
        <a asp-area="Client" asp-controller="CuaHang" asp-action="ThongTinCuaHang" class="active">Thông tin cửa hàng</a>
        <a asp-area="Client" asp-controller="CuaHang" asp-action="DanhSachXe">Quản lý xe</a>
        <a asp-area="Client" asp-controller="CuaHang" asp-action="DonThueChoDuyet">Quản lý đơn thuê</a>
        <a asp-area="Client" asp-controller="CuaHang" asp-action="BaoCao">Báo cáo</a>
        <a asp-area="Client" asp-controller="CuaHang" asp-action="DanhSachKhuyenMai">Khuyến mãi</a>
        <a asp-area="Client" asp-controller="CuaHang" asp-action="ThongKe">Thống kê</a>
    </nav>
</header>

<div class="wrapper_cuahang">
    <div class="container_cuahang0 cuahang_class">
        <div class="form-container">
            <form asp-area="Client" asp-controller="CuaHang" asp-action="CapNhatThongTin" method="post" enctype="multipart/form-data" class="form-grid">
                <div class="profile-header" style="grid-column: span 2;">
                    <div class="avatar-upload" onclick="document.getElementById('avatarInput').click();">
                        <img src="~/images/CuaHang/@Model.HinhAnh" alt="Avatar" class="avatar" id="avatarPreview">
                        <span class="edit-icon"><i class="fa fa-camera"></i></span>
                        <input type="file" id="avatarInput" name="hinhAnh" accept="image/*" onchange="previewAvatar(event)">
                    </div>
                    <div class="profile-info">
                        <h3>@Model.TenCuaHang</h3>
                        <p>@Model.Gmail</p>
                    </div>
                </div>

                <div class="form-group">
                    <label>Tên cửa hàng</label>
                    <input type="text" name="tenCuaHang" placeholder="Nhập tên cửa hàng" value="@Model.TenCuaHang" />
                </div>

                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" name="diaChi" placeholder="Nhập địa chỉ" value="@Model.DiaChi" />
                </div>

                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input type="text" name="soDienThoai" placeholder="Nhập số điện thoại" value="@Model.SoDienThoai" />
                </div>

                <div class="form-group">
                    <label>Liên hệ</label>
                    <input type="email" name="gmail" placeholder="Nhập email liên hệ" value="@Model.Gmail" />
                </div>

                <div class="form-group" style="grid-column: span 2;">
                    <label>Giới thiệu</label>
                    <textarea name="gioiThieu" rows="4"
                              style="padding: 10px 14px; border: 1px solid #e2e8f0; border-radius: 8px; background: #f9fafb; font-size: 15px; outline: none; resize: none;">@Model.GioiThieu</textarea>
                </div>

                <div class="form-buttons">
                    <button type="submit" class="btn btn-save">Xác nhận lưu</button>
                    <button type="button" class="btn btn-cancel" onclick="window.location.reload();">Huỷ chỉnh sửa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewAvatar(event) {
            const [file] = event.target.files;
            if (file) {
                document.getElementById('avatarPreview').src = URL.createObjectURL(file);
            }
        }
    </script>
}