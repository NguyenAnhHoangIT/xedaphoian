@model ThueXeDapHoiAn.Areas.Client.Models.XeModel_Client

@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutCuaHang.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/LayoutClient.css" />
}

<header>
    <nav class="main-nav">
        <a asp-area="Client" asp-controller="CuaHang" asp-action="ThongTinCuaHang">Thông tin cửa hàng</a>
        <a asp-area="Client" asp-controller="CuaHang" asp-action="DanhSachXe" class="active">Quản lý xe</a>
        <a asp-area="Client" asp-controller="CuaHang" asp-action="DonThueChoDuyet">Quản lý đơn thuê</a>
        <a href="#">Báo cáo</a>
        <a asp-area="Client" asp-controller="CuaHang" asp-action="DanhSachKhuyenMai">Khuyến mãi</a>
    </nav>
</header>

<div class="wrapper_cuahang">
    <aside>
        <h3>Quản lý</h3>
        <nav>
            <a asp-area="Client" asp-controller="CuaHang" asp-action="DanhSachXe">Danh sách xe</a>
            <a class="active">Thêm xe</a>
            <a asp-area="Client" asp-controller="CuaHang" asp-action="DanhSachLoaiXe">Loại xe</a>
        </nav>
    </aside>

    <div class="content_cuahang">
        <div class="container_cuahang8 cuahang_class">
            <h2>Thông tin xe đạp</h2>
            <form method="POST" enctype="multipart/form-data" asp-action="ThemXe" asp-controller="CuaHang" asp-area="Client">
                <label>Tên xe <span class="required">*</span></label>
                <input type="text" name="tenXe" placeholder="Nhập tên xe" required />

                <div class="form-group">
                    <label>Loại xe <span class="required">*</span></label>
                    <div style="display: flex; align-items: center;">
                        <select class="custom-select" name="idLoaiXe" required style="flex:1;">
                            <option value="">Chọn loại xe</option>
                            @if (ViewBag.LoaiXeList != null)
                            {
                                foreach (var loaiXe in ViewBag.LoaiXeList)
                                {
                                    <option value="@loaiXe.IdLoaiXe">@loaiXe.TenLoaiXe</option>
                                }
                            }
                        </select>
                        <a href="@Url.Action("ThemLoaiXe", "CuaHang", new { area = "Client" })"
                           title="Thêm loại xe mới"
                           style="font-size: 1.8rem; text-decoration: none; color: #218c5a; margin-left: 8px;">
                            <b>+</b>
                        </a>
                    </div>
                </div>

                <label>Số lượng <span class="required">*</span></label>
                <input type="number" name="soLuong" placeholder="Nhập số lượng" required />

                <label>Giá thuê theo giờ <span class="required">*</span></label>
                <input type="number" step="0.01" name="giaThueTheoGio" placeholder="Nhập giá thuê theo giờ" required />

                <label>Giá thuê theo ngày <span class="required">*</span></label>
                <input type="number" step="0.01" name="giaThueTheoNgay" placeholder="Nhập giá thuê theo ngày" required />

                <label>Giới thiệu</label>
                <input type="text" name="gioiThieu" placeholder="Nhập giới thiệu" />

                <div class="form-group">
                    <label>Hình ảnh</label>
                    <input type="file" name="hinhAnh" class="form-control" accept="image/*" />
                </div>

                <button type="submit" class="submit-btn">Thêm</button>
            </form>
        </div>
    </div>
</div>
