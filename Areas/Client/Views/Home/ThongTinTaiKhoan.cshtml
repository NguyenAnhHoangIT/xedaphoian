@model UserModel
@{
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/LayoutClient.css" />
    <link rel="stylesheet" href="~/css/ThongTinTaiKhoan.css" />
    <style>
        .custom-alert {
            background-color: #d4edda;
            color: #155724;
            border-left: 5px solid #28a745;
            padding: 15px 20px;
            margin-bottom: 20px;
            border-radius: 6px;
            font-weight: 500;
            position: relative;
        }

            .custom-alert .close-btn {
                position: absolute;
                top: 8px;
                right: 15px;
                cursor: pointer;
                font-size: 20px;
                color: #155724;
            }

        .avatar-upload {
            position: relative;
            width: 130px;
            height: 130px;
            border-radius: 50%;
            overflow: hidden;
            border: 3px solid #28a745;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            cursor: pointer;
            transition: transform 0.2s;
        }

            .avatar-upload:hover {
                transform: scale(1.05);
            }

            .avatar-upload img.avatar {
                width: 100%;
                height: 100%;
                object-fit: cover;
                display: block;
            }

        .avatar-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: 0.3s ease;
        }

        .avatar-upload:hover .avatar-overlay {
            opacity: 1;
        }

        .camera-icon {
            color: #fff;
            font-size: 24px;
        }

        #avatarInput {
            display: none;
        }

        .avatar-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
            width: 100%;
            flex-direction: column;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .form-buttons {
            grid-column: span 2;
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

        .password-container {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            color: #555;
        }
    </style>
}

@if (ViewBag.ThongBao != null)
{
    <div class="custom-alert">
        @ViewBag.ThongBao
        <span class="close-btn" onclick="this.parentElement.style.display='none';">&times;</span>
    </div>
}

<div class="form-container">
    <div class="profile-info">
        <h3>Xin chào @(Model.Ho + " " + Model.Ten)</h3>
    </div>

    <form asp-action="ThongTinTaiKhoan" asp-controller="Client" method="post" enctype="multipart/form-data" class="form-grid">
        @Html.AntiForgeryToken()

        <div class="avatar-wrapper" style="grid-column: span 2;">
            <div class="avatar-upload">
                <img src="~/images/nguoiDung/@Model.HinhAnh" alt="Avatar" class="avatar" id="avatarPreview" />
                <div class="avatar-overlay" onclick="document.getElementById('avatarInput').click();">
                    <i class="fa fa-camera camera-icon"></i>
                </div>
                <input type="file" id="avatarInput" name="hinhAnh" accept="image/*" onchange="previewAvatar(event)" />
            </div>
        </div>

        <div class="form-group">
            <label>Họ</label>
            <input type="text" name="Ho" placeholder="Nhập họ" value="@Model.Ho" />
        </div>

        <div class="form-group">
            <label>Tên</label>
            <input type="text" name="Ten" placeholder="Nhập tên" value="@Model.Ten" />
        </div>

        <div class="form-group">
            <label>Số điện thoại</label>
            <input type="text" name="SoDienThoai" placeholder="Nhập số điện thoại" value="@Model.SoDienThoai" />
        </div>

        <div class="form-group">
            <label>Mật khẩu</label>
            <div class="password-container">
                <input id="Password" type="password" name="MatKhau" placeholder="Nhập mật khẩu" value="@Model.MatKhau" />
                <button type="button" class="password-toggle" onclick="togglePassword('Password')">
                    <i class="fa-solid fa-eye"></i>
                </button>
            </div>
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn btn-save">Xác nhận lưu</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-cancel">Huỷ chỉnh sửa</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function togglePassword(fieldId) {
            const passwordField = document.getElementById(fieldId);
            const icon = passwordField.nextElementSibling.querySelector('i');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.className = 'fa-solid fa-eye-slash';
            } else {
                passwordField.type = 'password';
                icon.className = 'fa-solid fa-eye';
            }
        }

        function previewAvatar(event) {
            const input = event.target;
            const reader = new FileReader();
            reader.onload = function () {
                const avatarPreview = document.getElementById('avatarPreview');
                avatarPreview.src = reader.result;
            };
            if (input.files && input.files[0]) {
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
